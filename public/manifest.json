{
  "manifest_version": 3,
  "name": "Vocabulary Highlighter",
  "description": "Highlight words and phrases on every web page you visit",
  "author": "cwhuang29",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": ["activeTab", "tabs", "storage", "scripting", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./static/js/content.js"],
      "css": ["ext-css/index.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      }
    }
  },
  "icons": {
    "16": "icons/logo16.png",
    "32": "icons/logo32.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  }
}
